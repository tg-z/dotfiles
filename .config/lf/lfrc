map '"'
map d
map c
map e
map f

# functions
map zr :set reverse!
map se :set sortby 'ext'; set info
map st :set sortby 'time'; set info time
map ss :set sortby 'size'
map sn :set sortby 'name'
map ee $vim $f
map re rename $f
map ii $less $f
map bb $bat $f
map br $vimv $fx
map iv $viu "$f"
map d trash
map D delete
map dd rm -rf
map up unpk $fx
map zo $zathura "$f"
map p paste
map x cut
map y copy
map <enter> open
map mm mark-save
map ml mark-load
map mr mark-remove
map P pview $fx
map fj fzf_jump
map mf mkfile
map md mkdir
map mch chmod
map R reload
map gg top
map G bottom

# movement
map gh cd ~
