[user]
	username = tg-z
	name = serafina
	email = parasitism@protonmail.com
[committer]
	name = tg-z
	email = parasitism@protonmail.com
[alias]
	f = fetch
	a = add
	s = status
	sh = "!exec "
	sb = status -s -b
	b = branch
	d = diff
	cm = commit
	cam = commit -am
	cl = clone
	co = checkout
	cd = clone --depth 1
	lo = log --oneline
	pl = pull
	pu = push
	pup = push upstream
	r = remote
	ra = remote add
	grmv = remote rename
	rrm = remote remove
	ghi = 'TERM=xterm-256color ghi'
	start = !sh git commit --allow-empty -m 'initial commit' && git add . && git commit -m 'project skeleton'
	subadd = !sh -c 'git submodule add git://github.com/$1 $2/$(basename $1)' -
	subrm = !sh -c 'git submodule deinit -f -- $1 && rm -rf .git/modules/$1 && git rm -f $1' -
	subup = submodule update --init --recursive
	subpull = !git submodule foreach git pull --tags origin main
[github]
	user = tg-z
	oauth-token = !pass show secrets/github-oauth-token
[ghi]
	token = !pass show secrets/github-token
[web]
	browser = firefox
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = false
	clean = git-lfs clean -- %f
[init]
	templateDir = ~/.git-templates/git-secrets
	defaultBranch = main
[gist]
	home = ~/documents/promnesia/gist
[ghi "highlight"]
	style = rainbow_dash
[core]
	editor = mvim
	hooksPath = ~/.hooks
	excludesfile = ~/.config/git/ignore
	pager = delta
[ghq]
	root = ~/repos
	vcs = git
[color]
	ui = true
[color "status"]
	header = white normal bold
	changed = blue normal
	added = magenta normal
	updated = green normal
	branch = cyan normal bold
	untracked = red normal
[fetch]
	prune = true
	output = full
[include]
	path = ~/.config/git/private
[delta]
	syntax-theme = Github
	side-by-side = true
	line-numbers-left-format = ""
	line-numbers-right-format = "| "
[credential]
	helper = !pass-git-helper $@
[gitlab]
	tls = true
	format = json
	host = gitlab.com
	token = !pass show secrets/gitlab-token
[apply]
        ignoreWhitespace = change
[http "https://pkg.re"]
