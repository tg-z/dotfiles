[user]
	username = tg-z
	name = serafina
	email = parasitism@protonmail.com
[alias]
	gi = !sh -c 'vim .gitignore'
	f = fetch
	s = status
	sb = status -s -b
	bs = !git-branch-status
	d = 'diff'
	cam = commit -am
	cl = clone
	cld = clone --depth 1
	pl = pull
	pu = push
	puu = push upstream
	r = remote
	ra = remote add
	grmv = 'git remote rename'
	rrm = 'git remote remove'
	gsb = 'git status -sbu'
	ghi = 'TERM=xterm-256color ghi'
	start = "!f() { git commit --allow-empty -m 'initial commit' && git add . && git commit -m 'project skeleton'; }; f"
	co = checkout
	subadd = !sh -c 'git submodule add git://github.com/$1 $2/$(basename $1)' -
	subrm = !sh -c 'git submodule deinit -f -- $1 && rm -rf .git/modules/$1 && git rm -f $1' -
	subup = submodule update --init --recursive
	subpull = !git submodule foreach git pull --tags origin main
[github]
	user = tg-z
	oauth-token = !pass show secrets/github-oauth-token
[ghi]
	token = !pass show secrets/github-token
[web]
	browser = firefox
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[init]
	templateDir = ~/.git-templates/git-secrets
	defaultBranch = main
[gist]
	home = ~/documents/promnesia/gist
[ghi "highlight"]
	style = rainbow_dash
[core]
	editor = vim
	hooksPath = ~/.hooks
	excludesfile = ~/.config/git/ignore
	pager = delta
[ghq]
	root = ~/repos
	vcs = git
[color]
	ui = true
[color "status"]
	header = white normal bold
	changed = blue normal
	added = magenta normal
	updated = green normal
	branch = cyan normal bold
	untracked = red normal
[fetch]
	prune = true
[include]
	path = ~/.config/git/private
[delta]
	syntax-theme = Github
	side-by-side = true
	line-numbers-left-format = 
	line-numbers-right-format = "| "
[credential]
	helper = !pass-git-helper $@
[gitlab]
